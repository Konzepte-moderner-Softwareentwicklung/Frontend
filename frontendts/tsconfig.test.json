{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "types": ["jest", "@testing-library/jest-dom", "node"]
  },
  "include": [
    "src/**/*",
    "src/**/__tests__/**/*",
    "src/**/__mocks__/**/*",
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "src/setupTests.ts"
  ]
}